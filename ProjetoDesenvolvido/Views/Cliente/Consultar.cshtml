@model List<ClienteModel>
@{
    ViewData["Title"] = "Consultar Cliente";
}

<div class="text-center">
    <h2 class="display-4">Listagem do estoque de clientes no sistema</h2>
</div>

 <br/>

    @if(TempData["MensagemSucesso"] != null)
    {
         <div class="alert alert-success" role="alert">
           <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
           @TempData["MensagemSucesso"]
        </div>   
    }

    @if(TempData["MensagemErro"] != null)
    {
         <div class="alert alert-success" role="alert">
           <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
           @TempData["MensagemErro"]
        </div>   
    }

    <br/>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">E-mail</th>
      <th scope="col">Idade</th>
      <th scope="col">Cpf</th>
      <th scope="col">Empresa</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
     @if(Model != null && Model.Any())
     {
         foreach(ClienteModel cliente in Model)
         {
              <tr> 
                  <th scope="row">@cliente.Id</th>
                  <td>@cliente.Nome</td>
                  <td>@cliente.Email</td>
                  <td>@cliente.Idade</td>
                  <td>@cliente.Cpf</td>
                  <td>@cliente.Empresa</td>
               <td>
                  <a role="button" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="Editar" class="btn btn-primary">Editar</a>
               </td>
               <td>
                  <a role="button" asp-route-id="@cliente.Id" asp-controller="Cliente" asp-action="ApagarConfirmacao" class="btn btn-danger">Apagar</a>
               </td>
            </tr>
         }
     }
  </tbody>
</table>