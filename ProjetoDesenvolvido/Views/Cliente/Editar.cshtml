@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">
    <h2 class="display-4">editar cliente no sistema</h2>
</div>

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<div class="text-center">
    <h2 class="display-4">Cadastrar o estoque de clientes no sistema</h2>
</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">
  <input type="hidden" asp-for="Id"/>
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Informe o nome">
    @Html.ValidationMessageFor(x => x.Nome, null, new { @class = "field-validation-error" })
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Informe o Email">
    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "field-validation-error" })
  </div>
  <div class="form-group">
    <label for="idade">Idade</label>
    <input type="text" asp-for="Idade" class="form-control" placeholder="Informe a idade">
    @Html.ValidationMessageFor(x => x.Idade, null, new { @class = "field-validation-error" })
  </div>
  <div class="form-group">
    <label for="cpf">Cpf</label>
    <input type="text" asp-for="Cpf" class="form-control" placeholder="Informe o cpf">
    @Html.ValidationMessageFor(x => x.Cpf, null, new { @class = "field-validation-error" })
  </div>
  <div class="form-group">
    <label for="empresa">Empresa</label>
    <input type="text" asp-for="Empresa" class="form-control" placeholder="Informe a Emapresa">
    @Html.ValidationMessageFor(x => x.Empresa, null, new { @class = "field-validation-error" })
  </div>
  <button type="submit" class="btn btn-primary btn-block">Cadastrar Cliente</button>
</form>